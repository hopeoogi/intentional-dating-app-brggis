
# Ensure package-lock.json is always generated
package-lock=true

# Use exact versions for better reproducibility
save-exact=false

# Increase network timeout for slow connections
fetch-timeout=300000

# Enable legacy peer deps to avoid conflicts
legacy-peer-deps=false

# Prefer offline mode when possible
prefer-offline=false

# Strict SSL
strict-ssl=true

# Auto install peer dependencies
auto-install-peers=true
