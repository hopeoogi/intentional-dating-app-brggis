
{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "cache": {
        "disabled": true
      },
      "ios": {
        "simulator": true,
        "autoIncrement": true
      },
      "android": {
        "autoIncrement": true
      }
    },
    "preview": {
      "distribution": "internal",
      "cache": {
        "disabled": true
      },
      "ios": {
        "autoIncrement": true
      },
      "android": {
        "autoIncrement": true
      }
    },
    "production": {
      "cache": {
        "disabled": false,
        "clear": true
      },
      "ios": {
        "autoIncrement": true,
        "buildConfiguration": "Release"
      },
      "android": {
        "autoIncrement": true,
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
