
{
  "expo": {
    "name": "Intentional",
    "slug": "intentional-dating",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/final_quest_240x240.png",
    "scheme": "intentional",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/natively-dark.png",
      "resizeMode": "contain",
      "backgroundColor": "#6A5ACD"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.intentional.dating",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Intentional uses your location to find matches near you.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Intentional uses your location to find matches near you, even when the app is in the background.",
        "UIBackgroundModes": ["location", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/final_quest_240x240.png",
        "backgroundColor": "#6A5ACD"
      },
      "package": "com.intentional.dating",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "POST_NOTIFICATIONS",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/final_quest_240x240.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Intentional to use your location to find matches near you."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/final_quest_240x240.png",
          "color": "#6A5ACD",
          "defaultChannel": "default",
          "enableBackgroundRemoteNotifications": true
        }
      ],
      [
        "expo-screen-capture",
        {}
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
